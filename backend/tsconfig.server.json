{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist", // Dossier de sortie pour les fichiers compilés
    "esModuleInterop": true,
    "rootDir": "./src", // Dossier racine pour les fichiers source
    "target": "es6", // Utiliser ES6 pour une meilleure compatibilité avec Node.js
    "module": "commonjs" // Utiliser le module CommonJS pour Node.js
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
